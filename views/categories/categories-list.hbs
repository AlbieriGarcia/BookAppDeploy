<section class="py-5 text-center container">
  <div class="row py-lg-5">
    <div class="col-lg-6 col-md-8 mx-auto">
      <h1 class="fw-light">Book App</h1>
        <a href="/create-categories" class="btn btn-primary my-2">Crear nueva Categoria</a>
    </div>
  </div>
</section>

<div class="album py-5 bg-light">
  <div>


    <div class="row justify-content-center">

      {{#if hasCategories}}

        {{#each categories as |category|}}

          <div class="card col-md-3" style="width: 18rem;">
                <div class="card-body">
                  <h5 class="card-title">{{category.name}}</h5>
                  <p class="card-text">{{category.description}}</p>
                  <a href="/edit-categories/{{category.id}}?edit=true"class="btn btn-warning">Editar</a>

                  <form class="form-delete-category form-inline" action="/delete-categories" method="POST" data-category-name="{{category.name}}">
                      <input type="hidden" name="categoryId" value="{{category.id}}">
                      <button type="submit" class="btn btn-danger">Eliminar</button>
                  </form>
                </div>
          </div>
        {{/each}}

      {{else}}
      <h1>No hay categorias creadas</h1>
      {{/if}}

    </div>
  </div>
</div>