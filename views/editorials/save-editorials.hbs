<div class="container">
    <div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4"></div>

    <div class="card">
        <div class="card-header bg-dark text-white">
            {{#if editMode}}Editar{{else}}Crear{{/if}} editorial
        </div>
        <div class="card-body">

            <form class="needs-validation" novalidate method="POST" action="{{#if editMode}}/edit-editorials{{else}}/create-editorials{{/if}}">
                <div class="mb-3">
                    <label for="name" class="form-label">Nombre</label>
                    <input type="text" class="form-control" id="name" name="Name" required value="{{#if editMode}}{{editorial.name}}{{/if}}">
                </div>

                <div class="mb-3">
                    <label for="telefono" class="form-label">Tel√©fono:</label>
                    <input type="text" class="form-control" id="telefono" name="Telefono" required value="{{#if editMode}}{{editorial.telefono}}{{/if}}">
                </div>

                <div class="mb-3">
                    <label for="pais" class="form-label">Pais:</label>
                    <input type="text" class="form-control" id="pais" name="Pais" required value="{{#if editMode}}{{editorial.pais}}{{/if}}">
                </div>

                {{#if editMode}}
                    <input type="hidden" name="editorialId" value="{{editorial.id}}"> <!-- el aqui tiene el id en singular ojo-->
                {{/if}}


                <a href="/editorials" type="button" class="btn btn-primary">Volver</a>
                <button type="submit" class="btn btn-success btn-crear-validations">{{#if editMode}}Editar{{else}}Crear{{/if}}</button>
            </form>

        </div>
    </div>

    <div class="col-md-4"></div>
    </div>

</div>
