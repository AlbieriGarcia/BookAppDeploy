<section class="py-5 text-center container">
  <div class="row py-lg-5">
    <div class="col-lg-6 col-md-8 mx-auto">
      <h1 class="fw-light">Book App</h1>
        <a href="/create-editorials" class="btn btn-primary my-2">Crear nueva editorial</a>
    </div>
  </div>
</section>

<div class="album py-5 bg-light">
  <div>


    <div class="row justify-content-center">

      {{#if hasEditorials}}

        {{#each editorials as |editorial|}}

          <div class="card col-md-3" style="width: 18rem;">
                <div class="card-body">
                  <h5 class="card-title">{{editorial.name}}</h5>
                  <p class="card-text">{{editorial.telefono}}</p>
                  <p class="card-text">{{editorial.pais}}</p>
                  <a href="/edit-editorials/{{editorial.id}}?edit=true"class="btn btn-warning">Editar</a>

                  <form class="form-delete-editorial form-inline" action="/delete-editorials" method="POST" data-editorial-name="{{editorial.name}}">
                      <input type="hidden" name="editorialId" value="{{editorial.id}}">
                      <button type="submit" class="btn btn-danger">Eliminar</button>
                  </form>
                </div>
          </div>
      {{/each}}

      {{else}}
      <h1>No hay editoriales creadas</h1>
      {{/if}}

    </div>
  </div>
</div>